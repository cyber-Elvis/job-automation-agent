{
	"name": "Job Agent",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.12"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.analysis.typeCheckingMode": "basic",
				"python.testing.pytestEnabled": true
			}
		}
	},
	"forwardPorts": [8000],
	"postCreateCommand": "python -m venv .venv && . .venv/bin/activate && pip install -U pip && pip install -r requirements.txt"
}