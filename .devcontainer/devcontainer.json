{
	"name": "job-automation-agent",
	"features": { "ghcr.io/devcontainers/features/python:1": { "version": "3.12" } },
	"customizations": {
		"vscode": {
			"extensions": ["ms-python.python", "ms-python.vscode-pylance"],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.analysis.typeCheckingMode": "basic",
				"python.testing.pytestEnabled": true
			}
		}
	},
	"forwardPorts": [8000, 3000, 6379, 5432],
	"postCreateCommand": "pip install -r requirements.txt && python -m playwright install --with-deps"
}